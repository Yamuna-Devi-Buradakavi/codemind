#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,a[100],sum1=0,sum2=0,sum=0;
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    for(int i=0;i<n/2;i++)
    {
        sum1+=a[i];
    }
    for(int i=n/2;i<n;i++)
    {
        sum2+=a[i];
    }
    sum=sum2-sum1;
    cout<<sum<<endl;
}
